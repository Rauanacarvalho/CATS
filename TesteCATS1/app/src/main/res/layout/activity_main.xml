<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="2pt"
    tools:context=".presentation.activities.MainActivity">

    <Button
        android:id="@+id/button_linear_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="?android:selectableItemBackground"
        android:onClick="horizontalVertical"
        android:text="lalalala"
        android:textColor="@color/purple_200" />

    <Button
        android:id="@+id/main_button_linear_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="?android:selectableItemBackground"
        android:onClick="horizontalVertical"
        android:text="bbbbb"
        android:textColor="@color/purple_200"/>

    <Button
        android:id="@+id/main_button_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="?android:selectableItemBackground"
        android:onClick="grid"
        android:text="llllllll"
        android:textColor="@color/purple_200"/>

    <Button
        android:id="@+id/main_button_staggered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="?android:selectableItemBackground"
        android:onClick="staggredGrid"
        android:text="a"
        android:textColor="@color/purple_200"/>

</LinearLayout>
</LinearLayout>